{
  "enterprise": {
    "_all": {
      "enabled": true
    },
    "properties": {
        "name":{
            "type":"completion",
            "analyzer":"ik_max_word",
            "search_analyzer":"ik_max_word",
            "payloads":true,
            "preserve_separators" : false,//那么建议将忽略空格之类的分隔符。
            "preserve_position_increments" : false //如果建议项的第一个词使用的是停用词,并且我们使用了过滤停用词的分析器，需要把该项设置成false
        },
        "my_join_field": {
          "type": "join",
          "relations": {
            "enterprise": "product"
          }
        }
    }
  }
}

